extends layouts/main-layout.pug


block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/products.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSq_edArVxGCZXi08W4Ifwrja220hFx7iYW4cBnTbw1xg&s", alt="a book")
                        div.card__content
                            h2.product_price $20.00
                            p.product_description A book
                        .card_actions
                            button.btn Add to cart
        else
            h1 No products